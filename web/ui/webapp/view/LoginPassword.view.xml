<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f" xmlns:l="sap.ui.layout" controllerName="empathygame.controller.Password" displayBlock="true">
			<Page>
				<customHeader>
					<f:ShellBar title="{i18n>TITLE}" homeIcon="./img/logo_ui5.png" />
				</customHeader>
				<content>
					<f:DynamicPage>
						<f:content>
						    <FlexBox
                                height="100%"
                                alignItems="Center"
                                justifyContent="Center"
                                >
                                <items>                                    
                                    <l:VerticalLayout >
                                            <Label text="Please input the password for game ={store>/gameId}=" labelFor="input-gameId"/>
			                                <Input id="input-gamePassword"  value="{store>/gamePwd}" type="Password" placeholder="Password..." submit=".accessGame"/>
											<l:HorizontalLayout >
											<Button id="button-navBackGameId" icon="sap-icon://nav-back" text="" press=".navToLogin" class="sapUiTinyMarginEnd"/> 
                                            <Button id="button-submitGameId" icon="sap-icon://world" text="Access Game" press=".accessGame"/>      
											</l:HorizontalLayout >                       
                                    </l:VerticalLayout>
                                </items>
							</FlexBox>
						</f:content>
					</f:DynamicPage>
				</content>
			</Page>
</mvc:View>
