<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.f" controllerName="empathygame.controller.Router" displayBlock="true" height="100%">
		<App id="app">
            <Page>
				<customHeader>
					<f:ShellBar title="{i18n>TITLE}" homeIcon="./img/logo_ui5.png" />
				</customHeader>
				<content>
					<f:DynamicPage>
						<f:content>
							<FlexBox
                                height="100%"
                                alignItems="Center"
                                justifyContent="Center">
                                <items>
                                    <Button id="navToLogin" icon="sap-icon://visits" text="Please Login" press=".navToLogin"/>                              
                                </items>
							</FlexBox>
						</f:content>
					</f:DynamicPage>
				</content>
			</Page>
        </App>
</mvc:View>
